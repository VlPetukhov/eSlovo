server {
    charset utf-8;
    client_max_body_size 128M;

    listen 8000; ## listen for ipv4
    #listen [::]:8000 ipv6only=on; ## listen for ipv6

    server_name api.e-slovo.local;
    root        /var/www/apiBackend/frontend/web;
    index       index.php;

    #access_log  /var/log/nginxaccess.log;
    #error_log   /home/ubuntu/e-slovo/log/error.log;

    location / {
        # Redirect everything that isn't a real file to index.php
        try_files $uri $uri/ /index.php$is_args$args;
    }

    # uncomment to avoid processing of calls to non-existing static files by Yii
    #location ~ \.(js|css|png|jpg|gif|swf|ico|pdf|mov|fla|zip|rar)$ {
    #    try_files $uri =404;
    #}
    #error_page 404 /404.html;

    location ~ \.php$ {
	include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.0-fpm.sock;
    }

    location ~ /\.(ht|svn|git) {
        deny all;
    }
}
